# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                    controllers.Application.index()
GET        /categories.json     controllers.CategoryController.listRoots()

POST       /products/:categoryName.json     controllers.ProductController.listByCategoryAndFilter(categoryName:String)

# Add headers to options requests for CORS
OPTIONS    /*path                   controllers.OptionsRequestController.options(path:String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
